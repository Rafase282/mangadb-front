extends layout
block content
    main.container
      h1 #{user} Control Panel
      br
      .container-fluid
        .row
          .btn-group.btn-group-justified.center-text.table-bordered
            .col-xs-12.col-sm-6
              br
              .user-name
            .col-xs-12.col-sm-6
              br
              .user-email
        .row
          .btn-group.btn-group-justified
            a.btn.btn-danger.col-xs-12.col-sm-4(href='/user/#{username}/new')
              i.glyphicon.glyphicon-plus
              br
              |  Create new Manga
            a.btn.btn-danger.col-xs-12.col-sm-4(href='/user/#{username}/update')
              i.glyphicon.glyphicon-refresh
              br
              |  Update Profile
            a.btn.btn-danger.col-xs-12.col-sm-4(href='/user/#{username}/delete')
              i.glyphicon.glyphicon-trash
              br
              |  Delete Account
      br
      br
      section
        .container-fluid
          .row
            .col-xs-12
              ul.nav.nav-tabs
                li.col-xs-12.col-sm-6.col-md-3.active
                  a.center-text(data-toggle='tab', href='#all') All Mangas
                li.col-xs-12.col-sm-6.col-md-3
                  a.center-text(data-toggle='tab', href='#current') Currently Reading
                li.col-xs-12.col-sm-6.col-md-3
                  a.center-text(data-toggle='tab', href='#done') Done Reading
                li.col-xs-12.col-sm-6.col-md-3
                  a.center-text(data-toggle='tab', href='#willread') Will Read
              .tab-content
                form.search-form.clearfix(action='')
                  .form-group.has-feedback
                    label.sr-only(for='search') Search
                    input#search.form-control(type='text', name='search', placeholder='Search for your Manga')
                    span.glyphicon.glyphicon-search.form-control-feedback
                #all.tab-pane.fade.in.active
                  h1.center-text All Mangas
                  br
                  div
                    ul.list
                #current.tab-pane.fade
                  h1.center-text Currently Reading
                  br
                  div
                    ul.list2
                #done.tab-pane.fade
                  h1.center-text Done Reading
                  br
                  div
                    ul.list3
                #willread.tab-pane.fade
                  h1.center-text Will Read Soon
                  br
                  div
                    ul.list4
    section#push
