extends layout
  block content
      .form.main
        h1 Password Recovery
        form(role='form', method='POST', name='forgot', accept-charset='UTF-8', enctype='application/x-www-form-urlencoded', autocomplete='off')
          .field-wrap
            .form-group.input-group
              span#basic-addon1.input-group-addon
                span.glyphicon.glyphicon-envelope
              input.form-control(type='text', name='email', placeholder='Enter your E-mail address', aria-describedby='basic-addon1', autocomplete='off')
          .field-wrap
          button.btn.btn-danger.button.button-block(type='submit') Reset Password
    