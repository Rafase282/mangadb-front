extends layout
block content
      // The form stuff
      .form.main
        h1 Register for Free
        form(role='form', action='/signup', method='POST', name='signup', accept-charset='UTF-8', enctype='application/x-www-form-urlencoded', autocomplete='off')
          .form-group.input-group
            span#basic-addon1.input-group-addon
              span.glyphicon.glyphicon-tags
            input.form-control(type='text', placeholder='First Name', aria-describedby='basic-addon1')
            span#basic-addon1.input-group-addon
              span.glyphicon.glyphicon-tags
            input.form-control(type='text', placeholder='Last Name', aria-describedby='basic-addon1')
          .form-group.input-group
            span#basic-addon1.input-group-addon
              span.glyphicon.glyphicon-user
            input.form-control(type='text', placeholder='Username', aria-describedby='basic-addon1')
            span#basic-addon1.input-group-addon
              span.glyphicon.glyphicon-envelope
            input.form-control(type='text', placeholder='E-Mail', aria-describedby='basic-addon1')
          .form-group.input-group
            span#basic-addon2.input-group-addon
              span.glyphicon.glyphicon-lock
            input.form-control(type='password', placeholder='Password', aria-describedby='basic-addon2', autocomplete='off')
            span#basic-addon2.input-group-addon
              span.glyphicon.glyphicon-lock
            input.form-control(type='password', placeholder='Comfirm Password', aria-describedby='basic-addon2', autocomplete='off')
          button.btn.btn-danger.button.button-block(type='button') Register